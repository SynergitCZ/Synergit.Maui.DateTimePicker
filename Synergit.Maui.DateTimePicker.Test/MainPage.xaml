<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Synergit.Maui.DateTimePicker.Test.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sgdtp="clr-namespace:Synegit.Maui.DateTimePicker;assembly=Synergit.Maui.DateTimePicker">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <!--  Nullable datetime picker  -->
            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="Maui Nullable and Clearable DateTimePicker Examples"
                TextColor="Black"
                VerticalOptions="Center" />

            <Label
                Text="DateTimepicker"
                TextColor="Black" />

            <sgdtp:SGDateTimePicker
                Padding="5,0,5,0"
                CornerRadius="5"
                HeightRequest="40"
                HorizontalOptions="Start"
                Mode="DateTime"
                NullableDateTime="{Binding MyDateTime}"
                SelectedDayStyle="{StaticResource SelectedDayStyle}"
                ShowWeekNumbers="True"
                WidthRequest="300" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
